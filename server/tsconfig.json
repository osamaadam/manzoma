{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ES2018", "ESNext.AsyncIterable"],
    "paths": {
      "*": ["../node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
